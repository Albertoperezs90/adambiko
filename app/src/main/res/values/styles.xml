<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Entry.Main.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Entry.Secondary.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <style name="Modify.Textview" parent="Entry.Secondary.TextView">
        <item name="android:textSize">18sp</item>
    </style>


    <style name="Modify.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">6</item>
    </style>

    <style name="Modify.MultiLine.EditText" parent="Modify.EditText">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">start|top</item>
        <item name="android:maxLength">99999999</item>
    </style>

</resources>
